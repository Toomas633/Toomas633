{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Frontend Dev Server",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"skipFiles": ["<node_internals>/**"],
			"console": "integratedTerminal",
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "Run Frontend Tests",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["test"],
			"skipFiles": ["<node_internals>/**"],
			"console": "integratedTerminal"
		}
	]
}
