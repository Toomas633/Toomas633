{
	"name": "toomas633s-dungeon-backend",
	"description": "Backend server for Toomas633's projects homepage",
	"version": "4.2.1",
	"private": true,
	"license": "GPL-3.0-only",
	"type": "module",
	"main": "dist/server.js",
	"types": "dist/server.d.ts",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc --watch",
		"clean": "rimraf dist",
		"start": "node dist/server.js",
		"dev": "tsx watch src/server.ts",
		"dev:build": "tsc && node --watch dist/server.js",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write 'src/**/*.ts' '*.json'",
		"type-check": "tsc --noEmit",
		"docker:build": "docker build -t toomas633-backend .",
		"docker:run": "docker run -p 3000:3000 --env-file .env toomas633-backend",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down"
	},
	"dependencies": {
		"body-parser": "^2.2.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-rate-limit": "^8.2.1",
		"nodemailer": "^7.0.10"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/body-parser": "^1.19.6",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.1",
		"@types/nodemailer": "^7.0.4",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@vitest/coverage-v8": "^4.0.12",
		"eslint": "^9.39.1",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"rimraf": "^6.1.2",
		"supertest": "^7.1.4",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.12"
	}
}
