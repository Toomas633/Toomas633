{
	"name": "toomas633s-dungeon-backend",
	"description": "Backend server for Toomas633's projects homepage",
	"version": "2.0.0",
	"private": true,
	"license": "GPL-3.0-only",
	"type": "module",
	"main": "dist/app.js",
	"types": "dist/app.d.ts",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"scripts": {
		"build": "tsc",
		"start": "node dist/app.js",
		"dev": "tsx watch src/app.ts",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src/**/* tests/**/*",
		"scan:lint": "eslint src/**/* tests/**/* --format json --output-file .reports/eslint-report.json --no-fix",
		"prettier": "prettier --write '**/*.{ts,js,jsx,json,css,scss,vue,html}'",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"body-parser": "^2.2.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-rate-limit": "^8.2.1",
		"nodemailer": "^7.0.10"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/body-parser": "^1.19.6",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.1",
		"@types/nodemailer": "^7.0.4",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@vitest/coverage-v8": "^4.0.13",
		"eslint": "^9.39.1",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"supertest": "^7.1.4",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.13"
	}
}
